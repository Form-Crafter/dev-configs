{
  "name": "@form-crafter/dev-configs",
  "author": "Form Crafter",
  "version": "0.2.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "dev-configs-install": "dist/bin/install.js",
    "dev-configs-aliases": "dist/bin/aliases.js"
  },
  "scripts": {
    "build": "npm run clean && npm run transfer && npm run build:tsc",
    "build:tsc": "tsc && tsc-alias",
    "clean": "rimraf ./dist",
    "transfer": "mkdirp ./dist && run-s transfer:*",
    "transfer:editorconfig": "ncp ./.editorconfig ./dist/.editorconfig",
    "transfer:lint-staged": "ncp ./lint-staged.config.js ./dist/lint-staged.config.js",
    "transfer:eslint": "ncp ./eslint.config.js ./dist/eslint.config.js",
    "transfer:gitignore": "ncp ./.gitignore ./dist/.gitignore",
    "transfer:prettier": "ncp ./.prettierrc ./dist/.prettierrc",
    "transfer:tsconfig": "ncp ./tsconfig.base.json ./dist/tsconfig.json",
    "transfer:jest": "ncp ./jest.config.js ./dist/jest.config.js",
    "transfer:templates": "ncp ./src/templates ./dist/templates",
    "prepare": "husky",
    "format": "prettier --write ./src",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint -c ./eslint.config.js .",
    "lint:tsc": "tsc --p ./tsconfig.json --noEmit true --emitDeclarationOnly false",
    "fix": "npm run lint:eslint -- --fix && npm run lint:tsc"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.4",
    "@types/ora": "^3.1.0",
    "mkdirp": "^3.0.1",
    "ncp": "^2.0.0",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "chalk": "^5.4.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "npm-run-all": "^4.1.5",
    "ora": "^8.1.1",
    "prettier": "^3.4.2",
    "tsc-alias": "^1.8.10",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.19.1"
  }
}
