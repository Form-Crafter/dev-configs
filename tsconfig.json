{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "_consts": ["consts"],
      "_consts/*": ["consts/*"],
      "_bin": ["bin"],
      "_bin/*": ["bin/*"],
      "_utils": ["utils"],
      "_utils/*": ["utils/*"],
      "_types": ["types"],
      "_types/*": ["types/*"],
      "_templates": ["templates"],
      "_templates/*": ["templates/*"]
    }
  },
  "include": ["./src"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
